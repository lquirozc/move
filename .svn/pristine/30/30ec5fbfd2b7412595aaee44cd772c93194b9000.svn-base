@keyframes lds-spinner {
  0% {
    transform: rotate(0) scale(1);
    animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
  }
  50% {
    transform: rotate(720deg) scale(0.4);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }
  100% {
    transform: rotate(1440deg) scale(1);
  }
}

@keyframes lds-spinner-colors {
  0% {
    color: var(--mv-primary-color);
  }
  // 25% { color: var(--mv-secondary-color); }
  50% {
    color: var(--mv-fourth-color);
  }
  // 75% { color: var(--mv-secondary-color); }
  100% {
    color: var(--mv-primary-color);
  }
}

@-webkit-keyframes lds-spinner {
  0% {
    transform: rotate(0) scale(1);
    animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
  }
  50% {
    transform: rotate(720deg) scale(0.4);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }
  100% {
    transform: rotate(1440deg) scale(1);
  }
}

@-webkit-keyframes lds-spinner-colors {
  0% {
    color: var(--mv-primary-color);
  }
  // 25% { color: var(--mv-secondary-color); }
  50% {
    color: var(--mv-fourth-color);
  }
  // 75% { color: var(--mv-secondary-color); }
  100% {
    color: var(--mv-primary-color);
  }
}

