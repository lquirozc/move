/******Loader*****/
.loader {
  overflow: hidden;

  .loader-wrapper {
    position: absolute;
    left: 50%;
    top: 50%;
    z-index: 1052;
    -moz-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    width: 90px;
    text-align: center;

    img {
      width: 100%;
    }

    .loader-transporter {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 35px;
      height: 35px;
      display: block;
      .spin-loader {
        width: 35px;
        height: 35px;
        animation: lds-spinner 1.2s linear infinite;

        span {
          font-size: 35px;
          color: var(--mv-primary-color);
          animation: lds-spinner-colors 1.2s ease-in-out infinite;
        }
      }
    }
  }

  &:before {
    content: "";
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1051;
    background-color: rgba(255, 255, 255, 0.7);
    -webkit-animation-name: fadeIn;
    animation-name: fadeIn;
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
  }
}
/******Tables*****/
.mv-container-table {
  width: 100%;
  padding: 50px 70px;
  overflow-x: auto;

  table.mv-form-table {
    border: none;
    width: 100%;
    color: var(--mv-table-text);
    border-collapse: separate;
    border-spacing: 0 2px;

    thead.header {
      background-color: var(--mv-bgtable);
      td {
        padding: 10px 15px;
        font-weight: bold;
        font-size: 16px;
        user-select: none;

        &.actions {
          display: flex;
          align-items: center;
          justify-content: flex-end;

          button {
            border: none;
            background: transparent;
            width: auto;
            height: auto;
            padding: 0;
            margin: 0;
            outline: none;
            color: var(--mv-table-text);
          }

          [class^="icon-"] {
            font-size: 25px;
            margin: 0 5px;
            cursor: pointer;
          }

          [class^="icon-"]:hover {
            color: var(--mv-primary-color);
          }
        }

        &.orderable.asc::after {
          content: "\e910";
          font-family: "icomoon" !important;
          display: inline-block;
          box-sizing: border-box;
          color: var(--mv-table-icon-color);
          pointer-events: none; /* let the click pass trough */
          transform: rotate(90deg);
          font-size: 12px;
        }

        &.orderable.desc::after {
          content: "\e910";
          font-family: "icomoon" !important;
          display: inline-block;
          box-sizing: border-box;
          color: var(--mv-table-icon-color);
          pointer-events: none; /* let the click pass trough */
          transform: rotate(-90deg);
          font-size: 12px;
        }
      }
    }

    tbody.body {
      tr.mv-row {
        background-color: var(--mv-bgtable);
        // border-top: 2px solid #ffffff;

        td {
          padding: 10px 15px;
          font-size: 14px;

          &.actions {
            color: var(--mv-table-icon-color);
            display: flex;
            align-items: center;
            justify-content: flex-end;

            [class^="icon-"] {
              font-size: 23px;
              margin: 0 10px;
              cursor: pointer;

              &.active-editing {
                color: var(--mv-primary-color);
              }
            }

            [class^="icon-"]:hover {
              color: var(--mv-primary-color);
            }

            [class^="icon-"].state {
              font-size: 23px;
              margin: 0 10px;
              cursor: pointer;
              color: var(--mv-table-text);

              &.active {
                color: var(--mv-primary-color);
              }
            }
          }
        }

        &.active-editing {
          border: 1px solid var(--mv-primary-color);
          -webkit-box-shadow: inset 0px 0px 5px 0px rgba(var(--mv-primary-color-rgba));
          -moz-box-shadow: inset 0px 0px 5px 0px rgba(var(--mv-primary-color-rgba));
          box-shadow: inset 0px 0px 5px 0px rgba(var(--mv-primary-color-rgba));
        }
      }

      tr.mv-form-row {
        input.mv-input-form,
        textarea.mv-input-form,
        select.mv-input-form {
          border: 1px solid rgba(112, 112, 112, 0.43);
          outline: none !important;
          font-size: 14px;
          padding: 5px 10px;
          margin: 5px 0;
          width: 100%;
          color: var(--mv-table-text);

          &.is-invalid {
            border-color: rgba(255, 0, 0, 1);
            -webkit-box-shadow: 0px 0px 6px -2px rgba(255, 0, 0, 1);
            -moz-box-shadow: 0px 0px 6px -2px rgba(255, 0, 0, 1);
            box-shadow: 0px 0px 6px -2px rgba(255, 0, 0, 1);
          }

          &[disabled] {
            background-color: var(--base-bgmenu-superior);
            color: var(--mv-primary-text-color);
          }
        }

        .toggable {
          max-height: 0;
          transition: max-height 0.5s ease-in-out;
          overflow-y: auto;
          overflow-x: hidden;

          &.active {
            max-height: 1500px;
          }
        }
      }
    }
  }
}

