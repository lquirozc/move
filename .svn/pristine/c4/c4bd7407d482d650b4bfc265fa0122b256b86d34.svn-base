.mv-custom-select {
    width: 100%;
    min-width: 230px;
    height: auto;
    position: relative;
    display: block;

    .mv-form-group {
        width: 100%;
        height: 40px;
        background-color: #fff;
        border-bottom-left-radius: 25px;
        border-top-right-radius: 25px;
        -webkit-box-shadow: 2px 2px 9px -3px rgba(112, 112, 112, 1);
        -moz-box-shadow: 2px 2px 9px -3px rgba(112, 112, 112, 1);
        box-shadow: 2px 2px 9px -3px rgba(112, 112, 112, 1);

        .icon-prepend {
            background-color: var(--mv-primary-color);
            color: var(--mv-secondary-color);
            position: absolute;
            z-index: 1;
            left: 0;
            top: 0;
            height: inherit;
            width: 45px;
            border-bottom-left-radius: 25px;
            border-top-right-radius: 25px;
            font-size: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .selected-option {
            padding: 8px 45px 8px 50px;
        }

        .arrow-select {
            color: #575757;
            position: absolute;
            z-index: 1;
            right: 0;
            top: 0;
            height: inherit;
            width: 40px;
            border-top-right-radius: 25px;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;

            span {
                transform: rotate(90deg);
            }
        }

        .selector-template {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
            width: 100%;
            height: 40px;
            background-color: transparent;
            display: block;
            cursor: pointer;
        }
    }

    .mv-custom-list {
        display: none;
        max-height: 50vh;
        min-height: 35px;
        z-index: 2;
        overflow-y: auto;
        overflow-x: hidden;
        position: absolute;
        top: 40px;
        left: 45px;
        width: calc(100% - 45px);
        background-color: #fff;
        list-style: none;
        margin: 0;
        padding: 0;
        -webkit-box-shadow: 2px 2px 9px -3px rgba(112, 112, 112, 1);
        -moz-box-shadow: 2px 2px 9px -3px rgba(112, 112, 112, 1);
        box-shadow: 2px 2px 9px -3px rgba(112, 112, 112, 1);
        transition: all 0.5s ease-in-out;

        li {
            border-bottom: 1px solid rgba(112, 112, 112, 0.1);
            padding: 5px;
            user-select: none;
            transition: all 0.2s ease-in-out;
        }

        li:hover {
            background-color: var(--mv-primary-color);
            color: var(--mv-secondary-color);
        }

        &.active {
            display: block;
            animation-name: fadeIn;
            animation-duration: 0.3s;
        }
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}
